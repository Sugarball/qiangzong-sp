
<!--pages/apply/applysubject.wxml-->
<view class="list">
  <view class="item item-divider">
    请填写以下信息，方便我们联系您
  </view>
 <view class="item item-input">
      <span class="input-label"> 姓名 </span> 
      <input type="text" class="text-right" placeholder="请输入您的真实姓名" />
    </view>
  
        <view class="item item-input">
      <span class="input-label"> 手机号码 </span> 
      <input type="text" class="text-right" placeholder="请输入您的手机号码" />
    </view>
     
 <view class="item item-divider">
    请选择业务
  </view>    
<picker bindchange="bindPickerChange" value="{{areaIndex}}" range="{{area}}">      <view class="picker">  
      当前选择：{{area[areaIndex]}}  
    </view>  
</picker>


     <view class="item item-input">
      <span class="input-label"> 联系地址 </span> 
      <input type="text" class="text-right" placeholder="请填入您的联系地址" />
    </view>
   
    <view class="padding-top">
    <button size="" plain="" bindtap="" class=" energized-bg light "> 提交 </button>
      
</view>
</view>